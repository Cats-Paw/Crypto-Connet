<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../layout/head') %>
</head>

<body>
  <main>
    <header>
      <h1>Showing the results</h1>
      <%- include('../layout/header')%>
    </header>
    <% results.forEach(coin => { %>
    <div class="shown_result">
      <h3> Coin Name: <%= coin.name %> </h3>
      <p> Coin Symbol: <%= coin.symbol %> </p>
      <p> Coin Price: <%= coin.price %> </p>
      <form class="view_details" action="/viewDetails/<%= coin.symbol %>" method="POST">
        <input type="hidden" name="name" value="<%= coin.name %>">
        <input type="hidden" name="symbol" value="<%= coin.symbol %>">
        <button class="save_button" type="submit">View Details</button>
      </form>
      <form class="save_form" action="/watchList" method="POST">
        <input type="hidden" name="name" value="<%= coin.name %>">
        <input type="hidden" name="symbol" value="<%= coin.symbol %>">
        <button class="save_button" type="submit">Add to watchlist</button>
      </form>
    </div>
    <% }) %>
    <form action="/search" method="POST">
      <input type="hidden" name="min" value="<%= min %>">
      <input type="hidden" name="max" value="<%= max %>">
      <input type="hidden" name="aOrD" value="<%= aOrD %>">
      <input type="hidden" name="number" value="<%= num %>">
      <button class="save_button" type="submit">More</button>
    </form>
    <footer><%- include('../layout/footer') %></footer>
  </main>

  <%- include('../layout/publicScript') %>
</body>

</html>